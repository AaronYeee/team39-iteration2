@model IEnumerable<v2.Models.kinderInfoSet>

@{
    ViewBag.Title = "Find the kindergarten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/Content/css/smallnav.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.min.js"></script>
    <link href="~/Content/css/navbtn.css" rel="stylesheet" />

    <script src='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />

    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.5.1/mapbox-gl-geocoder.min.js"></script>
    <link rel="stylesheet"
          href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.5.1/mapbox-gl-geocoder.css"
          type="text/css" />


    @*This is used for the Geocoding Mapbox API*@
    <script src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v2.2.0/mapbox-glgeocoder.min.js'></script>
    <link rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-glgeocoder/v2.2.0/mapbox-gl-geocoder.css' type='text/css' />

    <link href="~/Content/css/map.css" rel="stylesheet" />
</head>
<body>
    <div style="height:150px"></div>

    <div class="row justify-content-center">
    <div class="col-lg-10 heading-section mb-5">
        <h2 class="text-black text-center mb-2" data-aos="fade-right">Find Kindergarten</h2>
    </div>
    </div>

        <section class="site-section" data-aos="fade">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-12">
                        <div class="row">

                            <div class="mb-4 mb-lg-0 col-lg-4 order-lg-2" data-aos="fade-right">
                                <form action="Update_table" method="post">
                                    <input id="area_input" name="input_area" type="text" placeholder="Enter suburb or post code" style=" background-color: #fff; font-family: Roboto; font-size: 15px; font-weight: 300; margin-left: 12px; padding: 0 11px 0 13px; text-overflow: ellipsis; width: 300px" />
                                    <input type="submit" value="search" style="margin-left:40% ; margin-top:5px" />
                                </form>
                                <div class='sidebar pad2'>
                                    <div class='heading'>
                                        <h>Our locations</h>
                                    </div>
                                    <div id='listings' class='listings'></div>
                                </div>

                            </div>

                            <div class="mb-4 mb-lg-0 col-lg-7 order-lg-2" data-aos="fade-right">
                                <div id='map' class="map pad2" style='width:850px; height: 550px;'></div>
                            </div>


                        </div>
                    </div>

                </div>


            </div>
        </section>


        <div><a id="tofees" href="#" class="scroll-down" address="true" style="bottom:0px;left:35%"></a></div>

        <section>
            <div class="container" id="fees" style="margin-top:150px">
                <div class="row justify-content-center" data-aos="fade-up">
                    <div class="col-lg-10 heading-section mb-5">
                        <h2 class="text-black text-center mb-2">Wondering about Fees?</h2>
                        <h3 class=" text-center text-black" style="margin-top:20px">
                            Kindergarten term fees
                        </h3>
                        <p class="text-black">
                            In 2020, it will cost <mark> $455 per term </mark> for a child to attend one of our kindergartens.
                            A child can attend up to 15 hours of kindergarten per week. There are <mark>4 terms</mark>in the kindergarten year.<br /><br />

                            All your fees go towards maintaining and operating the kindergarten.
                            The fees cover the gap between the cost to run the kindergarten and funding from the State Government.
                            Because funding changes every year, the fees we charge for kindergarten may also change.
                        </p>

                        <h3 class=" text-center text-black" style="margin-top:50px">
                            Independently managed kindergartens
                        </h3>
                        <p class="text-black">
                            Independently managed kindergartens <mark> set their own fees and structure</mark>.
                            Please contact the individual kindergarten for more information.<br /><br />
                        </p>
                        <p class="text-black">
                            What is child care subsidy ? If I have the eligibility?
                        </p>
                        <p><a href="~/Home/CSUBSIDY" class="btn btn-primary" id="navbtn"> Click me </a></p>



                    </div>
                </div>



            </div>
        </section>
        <section>
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h3 class=" text-center text-black" style="margin-top:50px">
                        Having Question about Child Care Subsidy or Financial Support?
                    </h3>
                </div>
            </div>
            <div style="margin-top:10px">
                <div class="multi-button">
                    <button><span class="icon-arrow-left"></span> <a href="~/Home/FSupport" class="button" id="navbtn"> Financial Support </a></button>


                    <button><a href="~/Home/CSUBSIDY" class="button" id="navbtn"> Child Care Subsidy </a><span class="icon-arrow-right"></span></button>

                </div>
            </div>


        </section>
        <table class="table" style="display:none">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Suburb)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="coordinates">
                    <th class="a_Id">
                        @Html.DisplayFor(modelItem => item.Id)
                    </th>
                    <td class="S_name">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="Type1">
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td class="postcode1">
                        @Html.DisplayFor(modelItem => item.PostCode)
                    </td>
                    <td class="suburb1">
                        @Html.DisplayFor(modelItem => item.Suburb)
                    </td>
                    <td class="eaddress1">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="rating1">
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td class="address1">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td class="location">
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td class="phone1">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                </tr>
            }

        </table>

        <script src="~/Scripts/js/location.js"></script>
        <script>
            $(function () {
                $('#tofees').click(function () {
                    $('html, body').animate({ scrollTop: $('#fees').offset().top }, 'slow');
                    return false;
                });
            });

        </script>

</body>

</html>



